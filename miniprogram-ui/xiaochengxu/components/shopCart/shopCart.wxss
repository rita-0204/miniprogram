/* components/shopCart/shopCart.wxss */
.fr{
  float:right;
}
.carContent{
    width: 100%;  
    height: 100%;  
    justify-content: space-between;  
    background-color:rgba(0, 0, 0, 0.3);  
    position: fixed;  
    z-index: 9;  
}
.carContainer{  
    flex-grow:0;
    position:fixed;
    background:#fff;
    width:100%;
    bottom:98rpx;
    left:0;
}  
 
.carTitle{
  width:750rpx;
  padding: 0 30rpx;
  height:80rpx;
  line-height: 80rpx;
  font-size:28rpx;
  background:#f5f5f5;
  color:#666;
  display:block;
}  
.carList{
  max-height:500rpx;
}
.carItem{  
    padding:24rpx;  
    display: flex;  
    /* justify-content: center;   */
    border-bottom: 1rpx solid #eeeeee;  
} 
.title{
  width:300rpx;
}
.price{
  width:150rpx;
}
.stepper{
  position: absolute;
  right:24rpx;
}
.carConter{
  display:flex;
  text-align: center;
}
.carConter .value{
  width:80rpx;
}
.carConter .symbol{
  width:40rpx;
  font-size:42rpx;
  height:40rpx;
  border-radius: 100rpx;
  line-height: 34rpx;
  text-align: center;
  color:#fff;
}

.carConter .subtract{
  background:#e2e2e2;
}
.carConter .add{
  background:#b4282d;  
}
.footer{
  position: fixed;
  left:0;
  bottom:0;
  width:750rpx;
  height:98rpx;
  line-height: 98rpx;
  background:#515151;
  z-index: 99;
}
.footer .iconCar{
  width:90rpx;
  height:90rpx;
  border-radius: 100rpx;
  float:left;
  background:#474747;
  border:6rpx solid #515151;
  position: absolute;
  top:-15rpx;
  left:30rpx;
    /* background:#fff url(static/images/icon_car_default.png) no-repeat center center;   */
   /* background-size:cover;  */
}
.footer .iconCar .num{
  color:#fff;
  width:30rpx;
  height:30rpx;
  line-height: 30rpx;
  text-align: center;
  border-radius: 100rpx;
  background:#b4282d;
  font-size:20rpx;
  position: absolute;
  right:10rpx;
  top:10rpx;
}
.footer .title{
  width:30%;
  margin-left:150rpx;
  color:#fff;
  display:inline-block;
}
.footer button{
  width:240rpx;
  height:98rpx;
  line-height: 98rpx;
  background:#666;
  font-size:30rpx;
  color:#fff;
  display:inline-block;
  border-radius: none;
  float:right;
}
