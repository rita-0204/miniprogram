page {
  height: 100%;
  overflow: hidden;
}

.container {
  height: 100%;
  overflow: hidden;
}

.header {
  position: relative;
  background: #feb70f;
  padding: 20rpx 40rpx;
  color: #000;
  -webkit-transition: all 0.6s ease-in-out;
}

.header.hidden {
  /*-webkit-transform: translate3d(0,-290rpx,0);*/
  margin-top: -290rpx;
}

.header .logo {
  float: left;
  width: 160rpx;
  height: 160rpx;
  border: 2rpx solid #fff;
  border-radius: 50%;
  margin-right: 10px;
}

.header .name {
  padding-top: 20rpx;
  font-size: 36rpx;
  line-height: 60rpx;
}

.header .welcome {
  color: #333;
  font-size: 30rpx;
  width: 360rpx;
  line-height: 70rpx;
}

.header .follow {
  position: absolute;
  right: 20px;
  top: 50px;
  font-size: 30rpx;
  line-height: 2;
  padding: 0 0.7em;
  border: 1rpx solid;
  border-radius: 30rpx;
}

.header .line {
  clear: both;
  width: 100%;
  height: 1px;
  border-bottom: 1px dashed #000;
  padding-top: 20rpx;
}

.header .desc {
  color: #333;
  font-size: 30rpx;
  line-height: 40rpx;
  padding-top: 20rpx;
}

.content-container {
  display: -webkit-flex;
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 100rpx;
}

.classify-container {
  width: 180rpx;
  background: #efefef;
  height: 100%;
}

.classify-container .classify {
  padding: 50rpx 30rpx;
  text-align: center;
  border-bottom: 1px solid #dcdcdc;
}

.classify-container .classify.active .name {
  color:#b4282d;
}

.classify-container .classify.active {
  background: #fff;
}

.classify-container .classify .name {
   display: inline-block; 
  font-size: 24rpx;
  color: #666;
   /* line-height: 1.2;  */
  /* text-align: left; */
    pointer-events: none;  
}

.goods-container {
  -webkit-flex: 1;
  background: #fff;
  height: 100%;
}

.goods-container .title {
  padding: 20rpx 25rpx;
  color: #646464;
  font-size: 24rpx;
  line-height: 30rpx;
  background: #f7f7f7;
}

.goods-container .goods {
  position: relative;
  padding: 20rpx 30rpx;
  font-size: 36rpx;
  line-height: 40rpx;
  border-bottom: 1px solid #f7f7f7;
}

.goods-container .goods .pic {
  float: left;
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.goods-container .goods .name {
  color: #000;
  font-size: 28rpx;
  line-height: 46rpx;
}

.goods-container .goods .sold {
  color: #989898;
  font-size: 20rpx;
  line-height: 46rpx;
}

.goods-container .goods .price {
  color: #b4282d;
  font-size: 28rpx;
  line-height: 46rpx;
}

.goods-container .goods .addCart {
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  width: 40rpx;
  height: 40rpx;
  color:#fff;
  line-height: 32rpx;
  text-align: center;
  background: #b4282d;
  border-radius: 50%;
  font-size:40rpx;  
}

.goods-container .goods .count {
  position: absolute;
  right: 80rpx;
  bottom: 20rpx;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 50%;
}

.goods-container .goods .reduceCart {
  position: absolute;
  right: 150rpx;
  bottom: 30rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 32rpx;
  text-align: center;
  font-size:40rpx;
  border-radius: 50%;
  color:#b4282d;
  border:2rpx solid #b4282d;
}

.goods-container .goods .reduceCart image {
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 16rpx;
  left: 17rpx;
}

.goods-container .goods .addCart image {
  pointer-events: none;
  position: absolute;
  left: 16rpx;
  top: 17rpx;
  width: 30rpx;
  height: 30rpx;
}

.cart-detail, .cart-detail .mask {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.cart-detail .mask {
  background: rgba(0, 0, 0, 0.7);
}

.cart-detail .list {
  position: absolute;
  left: 0;
  bottom: 100rpx;
  width: 100%;
  background: #f7f7f7;
  padding: 30rpx 0;
}

.cart-detail .list .item {
  display: -webkit-flex;
  color: #333;
  font-size: 36rpx;
  line-height: 50rpx;
  padding: 20rpx 40rpx;
}

.cart-detail .list .item .name {
  -webkit-flex: 1;
}

.cart-detail .list .item .total {
  width: 120rpx;
}

.cart-detail .list .item .reduce, .cart-detail .list .item .add {
  font-size: 40rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 34rpx;
  color:#fff;
  text-align: center;
  border-radius: 50%;
}
 .cart-detail .list .item .add{
  background: #b4282d;
 }
.cart-detail .list .item .reduce{
  color:#b4282d;
  border:2rpx solid #b4282d;
}

.cart-detail .list .item .num {
  width: 50rpx;
  text-align: center;
  margin: 0 5rpx;
}

.cart {
  display: -webkit-flex;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background: #515151;
}

.cart .data {
  -webkit-flex: 1;
  /*border-top: 1rpx solid #e7e7e7;*/
}

.cart .data .icon {
  position: absolute;
  left: 40rpx;
  top: -20rpx;
  width: 100rpx;
  height: 100rpx;
  background: #474747;
  border-radius: 50%;
}

.cart .data .icon image {
  position: absolute;
  left: 15rpx;
  top: 15rpx;
  width: 70rpx;
  height: 70rpx;
}

.cart .data .icon .count {
  position: absolute;
  left: 70rpx;
  top: -10rpx;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 0 12rpx;
  color: #fff;
  background: #b4282d;
  border-radius: 20rpx;
}

.cart .data .total {
  color: #fff;
  font-size: 30rpx;
  line-height: 100rpx;
  padding-left: 160rpx;
}

.cart button {
  width: 240rpx;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  background:#b4282d;
  font-size: 30rpx;
  border-radius: 0;
  color:#fff;
}
button[disabled]:not([type]){
  background:#666;
  color:#fff;
}
